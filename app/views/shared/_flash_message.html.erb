<div class="w-full bg-violet-200">
  <div class="w-3/5 mx-auto pt-5">
    <% flash.each do |message_type, message| %>
      <% case message_type.to_sym %>
      <% when :notice %>
        <p class="notice bg-green-100 border-l-4 border-green-500 text-green-700 p-4 pb-5"><%= message %></p>
      <% when :alert %>
        <p class="alert bg-red-100 border-l-4 border-red-500 text-red-700 p-4 pb-5"><%= message %></p>
      <% when :success %>
        <p class="success bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 pb-5"><%= message %></p>
      <% end %>
    <% end %>
  </div>
</div>
