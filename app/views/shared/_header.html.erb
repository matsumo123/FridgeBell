<header>
  <div class="inset-x-0 top-0 bg-violet-200 px-4 py-4">
    <div class="flex justify-between items-center text-black">
      <div class="px-1">
        <%= link_to '/', class:"group" do %>
          <h1 class="text-3xl font-exo2 group-hover:font-bold"><%= t('header.app_name') %></h1>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <div data-controller="user-menu" class="relative inline-block text-left">
          <button data-action="click->user-menu#toggle" class="text-gray-700 hover:font-semibold">
            <%= current_user.name %>
          </button>
          <div data-user-menu-target="menu" class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden">
            <div class="py-1">
              <%= link_to t('header.user_setting'), "#", class:"block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to t('header.terms_of_service'), "#", class:"block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to t('header.privacy_policy'), "#", class:"block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to t('header.contact_us'), "#", class:"block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to t('header.logout'), destroy_user_session_path, data: { turbo_method: :delete}, class:"block px-4 py-2 text-sm text-red-700 hover:bg-gray-100" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="flex space-x-4">
          <%= link_to t('header.login'), new_user_session_path, class:"py-2 px-4 bg-green-500 rounded-md text-white hover:bg-green-700" %>
        </div>
      <% end %>
    </div>
  </div>
</header>
