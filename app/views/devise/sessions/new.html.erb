<main class="flex flex-col items-center justify-center min-h-screen px-6 py-4 md:py-12">
  <div class="w-full max-w-md space-y-8">
    <div class ="text-center">
      <h2 class="text-3xl font-bold bg-gradient-to-r from-orange-500 to-pink-500 bg-clip-text text-transparent md:text-4x mb-8">
        <%= t('.sign_in') %>
      </h2>

      <div class="rounded-2xl bg-white/70 backdrop-blur-sm p-8 shadow-lg border border-orange-100">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
          <div class="flex flex-col space-y-2">
            <%= f.label :email, class: "block text-left text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, class: "w-full mb-2 rounded-xl border-2 border-gray-400 bg-white/80 px-4 py-3 text-gray-800"%>
          </div>
          <div class="flex flex-col space-y-2">
            <%= f.label :password , class: "block text-left text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, class: "w-full mb-2 rounded-xl border-2 border-gray-400 bg-white/80 px-4 py-3 text-gray-800"%>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="mb-2 mt-4">
              <%= f.check_box :remember_me, class: "peer" %>
              <%= f.label :remember_me, class: "peer-checked:font-bold" %>
            </div>
          <% end %>
          <%= f.submit t('.submit') , class: "w-full mt-4 bg-orange-400 hover:bg-orange-500 text-white font-semibold py-3 text-lg rounded-xl shadow-lg hover:shadow-xl transition-all duration-200"%>
        <% end %>
      </div>
        <div class="my-6 flex items-center">
        <div class="flex-1 border-t border-gray-200"></div>
        <div class="mx-4 text-sm text-gray-500">または</div>
        <div class="flex-1 border-t border-gray-200"></div>
      </div>
      <div class="flex justify-center">
        <button class="flex items-center justify-center w-full gap-2 rounded-xl py-3 btn bg-[#03C755] text-white border-[#00b544] shadow-lg hover:shadow-xl transition-all duration-200 hover:bg-[#02B74A]">
          <svg aria-label="Line logo" width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
            <g fill-rule="evenodd" stroke-linejoin="round" fill="white">
              <path fill-rule="nonzero" d="M12.91 6.57c.232 0 .42.19.42.42 0 .23-.188.42-.42.42h-1.17v.75h1.17a.42.42 0 1 1 0 .84h-1.59a.42.42 0 0 1-.418-.42V5.4c0-.23.188-.42.42-.42h1.59a.42.42 0 0 1-.002.84h-1.17v.75h1.17zm-2.57 2.01a.421.421 0 0 1-.757.251l-1.63-2.217V8.58a.42.42 0 0 1-.42.42.42.42 0 0 1-.418-.42V5.4a.418.418 0 0 1 .755-.249L9.5 7.366V5.4c0-.23.188-.42.42-.42.23 0 .42.19.42.42v3.18zm-3.828 0c0 .23-.188.42-.42.42a.42.42 0 0 1-.418-.42V5.4c0-.23.188-.42.42-.42.23 0 .418.19.418.42v3.18zM4.868 9h-1.59c-.23 0-.42-.19-.42-.42V5.4c0-.23.19-.42.42-.42.232 0 .42.19.42.42v2.76h1.17a.42.42 0 1 1 0 .84M16 6.87C16 3.29 12.41.376 8 .376S0 3.29 0 6.87c0 3.208 2.846 5.896 6.69 6.405.26.056.615.172.705.394.08.2.053.518.026.722 0 0-.092.565-.113.685-.035.203-.16.79.693.432.854-.36 4.607-2.714 6.285-4.646C15.445 9.594 16 8.302 16 6.87"></path>
            </g>
          </svg>
          <%= t('.line_login') %>
        </button>
      </div>

      <div class="mt-4 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
