<div class="min-h-screen bg-violet-200">
  <div class ="container mx-auto">
    <div class="text-center pt-5">
      <h2 class="text-3xl text-black-500 font-bold text-center mb-5"><%= t('.sign_up') %></h2>
      <div class="w-3/5 mx-auto">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="mb-3 mt-4 flex flex-col">
            <%= f.label :name, class: "block text-left mb-1" %>
            <%= f.text_field :name, class: "appearance-none border-2 border-gray-700 rounded  py-2 px-4 text-gray-800 leading-tight bg-white focus:border-gray-400 focus:outline-none w-full"%>
          </div>

          <div class="mb-3 mt-4 flex flex-col">
            <%= f.label :email, class: "block text-left mb-1" %>
            <%= f.email_field :email, class: "appearance-none border-2 border-gray-700 rounded  py-2 px-4 text-gray-800 leading-tight bg-white focus:border-gray-400 focus:outline-none w-full"%>
          </div>

          <div class="mb-3 mt-4 flex flex-col">
            <%= f.label :password , class: "block text-left mb-1" do %>
              <%= t('.password') %>
              <span class="text-sm text-gray-600 mt-1"><%= t('.password_complexity') %></span>
            <% end %>
            <%= f.password_field :password, class: "appearance-none border-2 border-gray-700 rounded  py-2 px-4 text-gray-800 leading-tight bg-white focus:border-gray-400 focus:outline-none w-full"%>
          </div>

          <div class="mb-3 mt-4 flex flex-col">
            <%= f.label :password_confirmation, class: "block text-left mb-1" %>
            <%= f.password_field :password_confirmation,  class: "appearance-none border-2 border-gray-700 rounded  py-2 px-4 text-gray-800 leading-tight bg-white focus:border-gray-400 focus:outline-none w-full" %>
          </div>

          <%= f.submit t('.create_user') , class: "inline-block py-2 px-10 mt-2 bg-violet-500 rounded-md text-white hover:bg-violet-700"%>
        <% end %>
      </div>
    </div>

    <div class="text-center py-2 mt-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
